<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="165dp">

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dot_shape"/>

        <androidx.cardview.widget.CardView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/main_bright_mauve"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/detail_place_3"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/main_bright_mauve"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배드민턴 코트 1"
                    android:textSize="18dp"
                    android:textColor="@color/main_navy"
                    android:fontFamily="@font/kopubdotumbold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용 가능 시간"
                    android:textSize="12dp"
                    android:textColor="#B5383F5C"
                    android:fontFamily="@font/kopubdotumbold"
                    android:layout_marginTop="20dp"/>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="15"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="16"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="17"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="18"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="19"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="20"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_margin="10dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_unclicked"
                            android:textColor="@color/black"
                            android:text="21"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>